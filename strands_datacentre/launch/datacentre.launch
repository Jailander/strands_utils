<launch>
  <arg name="db_path" default="/opt/strands/strands_datacentre"/>
  <arg name="port" default="62345" />

  <param name="datacentre_port" value="$(arg port)" />
  <param name="datacentre_host" value="$(env HOSTNAME)" />
  <node name="mongo_server" pkg="strands_datacentre" type="mongodb_server.py" output="screen">
	<param name="database_path" value="$(arg db_path)"/>
  </node>

  <node name="config_manager" pkg="strands_datacentre" type="config_manager.py" output="screen"/>

  <!-- rosout and diagnostic topic logger -->
  <node name="diagnostics_logger" pkg="strands_diagnostics" type="logger" output="screen"/>
</launch>